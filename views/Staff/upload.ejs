    <div class="container">
        <form action="/upload" method="post" enctype="multipart/form-data" onsubmit="return confirmAgreement()">
            <div class="form-group">
              <label for="exampleFormControlInput1">Title</label>
              <input type="text" name="title" class="form-control" id="exampleFormControlInput1" required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Content</label>
                <input type="text" name="content" class="form-control" id="exampleFormControlInput1"  required>
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Category</label>
              <select class="form-control" id="exampleFormControlSelect1" name="category" required>
                <% for( let index = 0; index < category.length; index++ ) { %>
                <option value="<%= category[index]._id %>"><%= category[index].nameCate %></option>
                <% } %>
              </select>
            </div>
            <label>
              <input type="checkbox" id="terms" name="terms">
              I agree to the terms and conditions
              </label>
            <div>
                <input type="file" name="files" multiple>
                <input type="submit" value="Upload">
            </div>   
          </form>
    </div>
    <script>
      function confirmAgreement() {
        if (document.getElementById("terms").checked) {
          var terms = "Terms and conditions: Chắc chưa:))";
          window.alert(terms);
          return confirm("Are you sure you agree to the terms and conditions?");
        } else {
          alert("Please agree to the terms and conditions.");
          return false;
        }
      }
    </script>   
</body>
